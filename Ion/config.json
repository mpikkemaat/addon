{
	"name": "Ion hub",
	"version": "0.68",
	"slug": "ion",
	"description": "Connects the ion border router to the mqtt broker",
	"arch": ["armv7", "amd64"],
	"executable": "tunslip6-{arch}",
	"startup": "system",
	"boot": "auto",
	"auto_uart": true,
	"host_network": true,
    "privileged": ["NET_ADMIN", "SYS_ADMIN"],
	"devices": ["/dev/net/tun:/dev/net/tun:rwm"],
	"options": {
		"serialport": "/dev/ttyAMA0"
	},
	"schema": {
		"serialport": "str"
	}
}
