{
	"name": "Ion hub",
	"version": "0.75",
	"slug": "ion",
	"description": "Connects the ion border router to the mqtt broker",
	"url": "https://github.com/mpikkemaat/addon/tree/master/Ion",
	"arch": ["armv7", "amd64"],
	"executable": "tunslip6-{arch}",
	"startup": "system",
	"boot": "auto",
	"uart": true,
	"host_network": true,
	"privileged": ["NET_ADMIN", "SYS_ADMIN"],
	"devices": ["/dev/net/tun"],
	"options": {
		"serialport": "/dev/ttyS0"
	},
	"schema": {
		"serialport": "str"
	}
}
